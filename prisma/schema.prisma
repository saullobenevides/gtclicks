generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENTE
  FOTOGRAFO
  ADMIN
}

enum PedidoStatus {
  PENDENTE
  PAGO
  CANCELADO
  REEMBOLSADO
}

enum OrientacaoFoto {
  HORIZONTAL
  VERTICAL
  PANORAMICA
  QUADRADO
}

model User {
  id             String      @id @default(cuid())
  name           String
  email          String      @unique
  emailVerified  DateTime?   @db.Timestamptz(6)
  image          String?
  passwordHash   String?
  role           UserRole    @default(CLIENTE)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  fotografo Fotografo?
  pedidos   Pedido[]       @relation("PedidosCliente")
  accounts  Account[]
  sessions  Session[]

  @@map("users")
}

model Fotografo {
  id            String    @id @default(cuid())
  userId        String    @unique
  username      String    @unique
  bio           String?
  cidade        String?
  especialidades String[]  @default([])
  redesSociais  Json?
  avatarUrl     String?
  bannerUrl     String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user     User                  @relation(fields: [userId], references: [id])
  colecoes Colecao[]
  fotos    Foto[]
  saldo    Saldo?
  transacoes Transacao[]
  saques   SolicitacaoSaque[]
}

model Colecao {
  id          String    @id @default(cuid())
  nome        String
  slug        String    @unique
  descricao   String?
  capaUrl     String?
  fotografoId String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  fotografo Fotografo @relation(fields: [fotografoId], references: [id])
  fotos     Foto[]
}

model Foto {
  id               String          @id @default(cuid())
  titulo           String
  slug             String          @unique
  descricao        String?
  tags             String[]
  orientacao       OrientacaoFoto
  categoria        String?
  corPredominante  String?
  previewUrl       String
  originalUrl      String
  views            Int             @default(0)
  likes            Int             @default(0)
  downloads        Int             @default(0)
  colecaoId        String?
  fotografoId      String
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt

  colecao   Colecao?        @relation(fields: [colecaoId], references: [id])
  fotografo Fotografo       @relation(fields: [fotografoId], references: [id])
  licencas  FotoLicenca[]
  itens     ItemPedido[]
}

model Licenca {
  id           String    @id @default(cuid())
  nome         String
  descricao    String?
  precoPadrao  Decimal   @db.Decimal(10, 2)
  termos       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  fotos FotoLicenca[]
  itens ItemPedido[]
}

model FotoLicenca {
  id        String   @id @default(cuid())
  fotoId    String
  licencaId String
  preco     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())

  foto    Foto    @relation(fields: [fotoId], references: [id])
  licenca Licenca @relation(fields: [licencaId], references: [id])

  @@unique([fotoId, licencaId])
}

model Pedido {
  id                String        @id @default(cuid())
  clienteId         String
  total             Decimal       @db.Decimal(10, 2)
  status            PedidoStatus  @default(PENDENTE)
  checkoutSessionId String?
  paymentProvider   String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  cliente User         @relation("PedidosCliente", fields: [clienteId], references: [id])
  itens   ItemPedido[]
}

model ItemPedido {
  id                  String   @id @default(cuid())
  pedidoId            String
  fotoId              String
  licencaId           String
  precoUnitario       Decimal  @db.Decimal(10, 2)
  downloadUrlAssinada String?
  expiresAt           DateTime?
  createdAt           DateTime @default(now())

  pedido  Pedido @relation(fields: [pedidoId], references: [id])
  foto    Foto   @relation(fields: [fotoId], references: [id])
  licenca Licenca @relation(fields: [licencaId], references: [id])

  @@index([pedidoId])
  @@index([fotoId])
  @@index([licencaId])
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        BigInt?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_token")
}

// Financial Models
model Saldo {
  id          String   @id @default(cuid())
  fotografoId String   @unique
  disponivel  Decimal  @default(0) @db.Decimal(10, 2)
  bloqueado   Decimal  @default(0) @db.Decimal(10, 2)
  chavePix    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  fotografo Fotografo @relation(fields: [fotografoId], references: [id], onDelete: Cascade)
}

enum TipoTransacao {
  VENDA
  COMISSAO
  SAQUE
  ESTORNO
}

model Transacao {
  id          String        @id @default(cuid())
  fotografoId String
  tipo        TipoTransacao
  valor       Decimal       @db.Decimal(10, 2)
  descricao   String?
  pedidoId    String?
  saqueId     String?
  status      String        @default("PROCESSADO") // PROCESSADO, PENDENTE, FALHOU
  createdAt   DateTime      @default(now())

  fotografo Fotografo @relation(fields: [fotografoId], references: [id], onDelete: Cascade)

  @@index([fotografoId])
  @@index([pedidoId])
}

enum StatusSaque {
  PENDENTE
  PROCESSADO
  CANCELADO
  FALHOU
}

model SolicitacaoSaque {
  id           String      @id @default(cuid())
  fotografoId  String
  valor        Decimal     @db.Decimal(10, 2)
  chavePix     String
  status       StatusSaque @default(PENDENTE)
  createdAt    DateTime    @default(now())
  processadoEm DateTime?
  observacao   String?

  fotografo Fotografo @relation(fields: [fotografoId], references: [id], onDelete: Cascade)

  @@index([fotografoId])
  @@index([status])
}
